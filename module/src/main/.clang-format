---
# We'll use defaults from the LLVM style, but with 4 columns indentation.
BasedOnStyle: Google 
IndentWidth: 4
ColumnLimit: 800
AlignConsecutiveAssignments: true
BraceWrapping: 
#  AfterClass:      true
#  AfterControlStatement: true
#  AfterEnum:       true
#  AfterFunction:   true
#  AfterNamespace:  true
#  AfterObjCDeclaration: true
#  AfterStruct:     true
#  AfterUnion:      true
#  BeforeCatch:     true
#  BeforeElse:      true
 IndentBraces:    false
AllowShortIfStatementsOnASingleLine: false
BreakBeforeBraces: Custom
UseTab:          Never